<pretty-config xmlns="http://ocpsoft.com/prettyfaces-xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.com/prettyfaces-xsd 
	http://ocpsoft.com/xml/ns/prettyfaces/pretty-1.0.xsd">

	<!-- ################ home ####################### -->
	<url-mapping id="home">
		<pattern>/</pattern>
		<view-id>/WEB-INF/pages/home/home.faces</view-id>
	</url-mapping>
	<url-mapping id="error">
		<pattern>/error</pattern>
		<query-param name="cameFrom" decode="false">#{errorBean.cameFrom}</query-param>
		<query-param name="errorCode" decode="false">#{errorBean.errorCode}</query-param>
		<view-id>/WEB-INF/pages/home/error.faces</view-id>
		<action>#{errorBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="softwareVersion">
		<pattern>/administration/software</pattern>
		<view-id>/WEB-INF/pages/home/softwareVersion.faces</view-id>
		<action>#{softwareVersionBean.prettyInit}</action>
	</url-mapping>

	<!-- ################ home ####################### -->
</pretty-config>