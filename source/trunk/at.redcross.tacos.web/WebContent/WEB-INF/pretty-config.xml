<pretty-config xmlns="http://ocpsoft.com/prettyfaces-xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://ocpsoft.com/prettyfaces-xsd 
	http://ocpsoft.com/xml/ns/prettyfaces/pretty-1.0.xsd">

	<!-- ################ SPECIAL MAPPINGS ####################### -->
	<url-mapping id="login">
		<pattern>/login</pattern>
		<view-id>/WEB-INF/pages/login.faces</view-id>
		<action onPostback="false">#{loginBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="error">
		<pattern>/error</pattern>
		<query-param name="cameFrom" decode="false">#{errorBean.cameFrom}</query-param>
		<query-param name="errorCode" decode="false">#{errorBean.errorCode}</query-param>
		<view-id>/WEB-INF/pages/error.faces</view-id>
		<action>#{errorBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="accessDenied">
		<pattern>/accessDenied</pattern>
		<view-id>/WEB-INF/pages/accessDenied.faces</view-id>
	</url-mapping>

	<!-- ################ HOME ####################### -->
	<url-mapping id="home">
		<pattern>/</pattern>
		<view-id>/WEB-INF/pages/home/home.faces</view-id>
	</url-mapping>
	<url-mapping id="profile">
		<pattern>/profile</pattern>
		<view-id>/WEB-INF/pages/home/profile.faces</view-id>
	</url-mapping>
	<url-mapping id="links">
		<pattern>/links</pattern>
		<view-id>/WEB-INF/pages/home/links.faces</view-id>
	</url-mapping>
	<url-mapping id="info">
		<pattern>/info</pattern>
		<view-id>/WEB-INF/pages/home/info.faces</view-id>
	</url-mapping>

	<!-- ################ ROSTER ####################### -->
	<url-mapping id="roster-dayView">
		<pattern>/roster</pattern>
		<view-id>/WEB-INF/pages/roster/dayView.faces</view-id>
		<action onPostback="false">#{rosterDayViewBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="roster-personalView">
		<pattern>/roster/personal</pattern>
		<view-id>/WEB-INF/pages/roster/personalView.faces</view-id>
	</url-mapping>
	<url-mapping id="roster-weekView">
		<pattern>/roster/week</pattern>
		<view-id>/WEB-INF/pages/roster/weekView.faces</view-id>
	</url-mapping>
	<url-mapping id="roster-createEntryView">
		<pattern>/roster/create</pattern>
		<view-id>/WEB-INF/pages/roster/editEntryView.faces</view-id>
		<action onPostback="false">#{rosterEntryBean.prettyInit}</action>
	</url-mapping>
		<url-mapping id="roster-editEntryView">
		<pattern>/roster/edit/#{rosterEntryBean.rosterId}</pattern>
		<view-id>/WEB-INF/pages/roster/editEntryView.faces</view-id>
		<action onPostback="false">#{rosterEntryBean.prettyInit}</action>
	</url-mapping>
	
	<!-- ################ ADMINISTRATION ####################### -->
	<url-mapping id="admin-home">
		<pattern>/admin</pattern>
		<view-id>/WEB-INF/pages/administration/homeView.faces</view-id>
	</url-mapping>
	
	<url-mapping id="admin-software">
		<pattern>/admin/software</pattern>
		<view-id>/WEB-INF/pages/administration/softwareVersionView.faces</view-id>
		<action>#{softwareVersionBean.prettyInit}</action>
	</url-mapping>
	
	<!-- ################ ADMINISTRATION - USER ####################### -->
	<url-mapping id="admin-createUserView">
		<pattern>/admin/user/create</pattern>
		<view-id>/WEB-INF/pages/administration/editUserView.faces</view-id>
		<action onPostback="false">#{systemUserEntryBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="admin-editUserView">
		<pattern>/admin/user/edit/#{systemUserEntryBean.sysUserId}</pattern>
		<view-id>/WEB-INF/pages/administration/editUserView.faces</view-id>
		<action onPostback="false">#{systemUserViewBean.prettyInit}</action>
	</url-mapping>
	<url-mapping id="admin-listUsersView">
		<pattern>/admin/users</pattern>
		<view-id>/WEB-INF/pages/administration/userListingView.faces</view-id>
		<action onPostback="false">#{systemUserViewBean.prettyInit}</action>
	</url-mapping>
	
</pretty-config>